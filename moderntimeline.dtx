\newcommand{\tl@splitlabels@auxi}[2]{}
\def\tl@splitlabels@auxi#1///#2\@nnil{%
  \ifx\tl@startlabel\empty\relax% First call
    \gdef\tl@startlabel{#1}
    \ifx\@nnil#2\@nnil
      \gdef\tl@startlabel{}
    \else
