%
% \begin{macro}{\tlsetnotshadedfraction}
%    \begin{macrocode}
\newcommand{\tlsetnotshadedfraction}[1]{%
   \def\tl@nsfrac{#1}
}
\tlsetnotshadedfraction{0}
